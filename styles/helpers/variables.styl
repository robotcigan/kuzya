$transition = all .4s cubic-bezier(.4,0,0,1)
$transition2 = all 1s cubic-bezier(.4,0,0,1)
$transition3 = all 2s cubic-bezier(.16,1.08,.38,.98)


$font = 'Inter', 'Arial', 'Helvetica', sans-serif
